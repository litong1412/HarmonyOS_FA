<?xml version="1.0" encoding="UTF-8"?>
<plugin id="hms-js-account" version="5.2.0-300" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
	<name>HMS JS Account</name>
	<description>Cordova HMS Account Plugin</description>
	<license>Apache 2.0</license>
	<keywords>cordova,account,hms-account,huawei-account,hms,huawei</keywords>

	<js-module name="HMSAccount" src="index.js">
		<clobbers target="HMSAccount" />
	</js-module>

	<platform name="android">
		<hook type="after_plugin_install" src="cordova/hooks/after_plugin_install.js" />
		<hook type="before_plugin_uninstall" src="cordova/hooks/before_plugin_uninstall.js" />

		<config-file parent="/*" target="res/xml/config.xml">
			<feature name="JSCore">
				<param name="android-package" value="com.huawei.hms.jsb.adapter.cordova.JSBCordovaPlugin" />
			</feature>
		</config-file>

		<config-file parent="/*" target="AndroidManifest.xml">
			<!-- ! Permissions here--> 
		</config-file>

		<framework src="com.huawei.hms:cordova-adapter:5.2.0.300" />
		<framework src="cordova/build-extras.gradle" custom="true" type="gradleReference" />
	</platform>
</plugin>
